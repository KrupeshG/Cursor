{
  "apiVersion": 2,
  "name": "custom/whats-on-grid",
  "version": "1.0.0",
  "title": "What's On Grid",
  "category": "widgets",
  "icon": "grid-view",
  "description": "Dynamic grid of posts with server-side pagination.",
  "supports": { "html": false },
  "textdomain": "whats-on-grid",
  "editorScript": "whats-on-grid-editor",
  "attributes": {
    "perPage": { "type": "number", "default": 30 },
    "idsString": { "type": "string", "default": "429,615,450,614,434,511" },
    "includeChildren": { "type": "boolean", "default": true },
    "taxonomy": { "type": "string", "default": "category" },
    "termIds": { "type": "array", "items": { "type": "number" }, "default": [429,615,450,614,434,511] },
    "columns": { "type": "number", "default": 3 },
    "postType": { "type": "string", "default": "post" },
    "baseUrl": { "type": "string", "default": "/whats-on/" },
    "queryVar": { "type": "string", "default": "pg" }
  }
}
